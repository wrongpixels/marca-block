{
  "manifest_version": 3,
  "name": "MARCA Block",
  "version": "1.0.0",
  "description": "Oculta artículos, vídeos y secciones completas de MARCA.com por autor, palabra clave y/o tipo de contenido.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://www.marca.com/*", "https://marca.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Marca Block",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.marca.com/*", "https://marca.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
