{
  "manifest_version": 3,
  "name": "MARCA Block",
  "version": "0.2.0",
  "description": "Oculta artículos, vídeos y secciones completas de MARCA.com por autor, palabra clave o tipo de contenido.",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.marca.com/*", "https://marca.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Marca Block",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.marca.com/*", "https://marca.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
